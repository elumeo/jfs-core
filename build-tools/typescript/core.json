{
  "extends": "./build-tools/typescript/common.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "Component/*": ["./Component/*"],
      "Constant/*": ["./Constant/*"],
      "Mock/*": ["./Mock/*"],
      "Setup/*": ["./Setup/*"],
      "Store/*": ["./Store/*"],
      "Types/*": ["./Types/*"],
      "Utilities/*": ["./Utilities/*"],
      "API/*" : ["./API/*"]
    }
  },
  "include": ["./src", "./augmentation"],
  "exclude": [
    "scripts",
    "build",
    "showcase",
    "**/node_modules",
    "**/.*/"
  ]
}
