{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018", "esNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./Library",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "Action/*": ["./Store/Action/*"],
      "Component/*": ["./Component/*"],
      "Core/*": ["../node_modules/@elumeo/jfs-core/src/*"],
      "Jsc/*": ["./Jsc/*"],
      "Mock/*": ["./Mock/*"],
      "Setup/*": ["./Setup/*"],
      "Store": ["./Store/index.ts"],
      "Types/*": ["./Types/*"],
      "Utilities/*": ["./Utilities/*"]
    }
  },
  "exclude": [
    "dist",
    "src/__test__/*",
    "node_modules/@elumeo/jfs-core/scripts",
    "scripts",
    "Library",
    "./helper.js"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
