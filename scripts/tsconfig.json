{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es2018", "esNext"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "Setup/*": [
        "./Setup/*"
      ],
      "Library/*": [
        "./Library/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ]
}
