{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018", "esNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./build",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "Action/*": ["./Store/Action/*"],
      "Component/*": ["./Component/*"],
      "Constant/*": ["./Constant/*"],
      "Jsc/*": ["./Jsc/*"],
      "Mock/*": ["./Mock/*"],
      "Setup/*": ["./Setup/*"],
      "Store/*": ["./Store/*"],
      "Types/*": ["./Types/*"],
      "Utilities/*": ["./Utilities/*"]
    }
  },
  "exclude": [
    "dist",
    "src/__test__/*",
    "node_modules/@elumeo/jfs-core/scripts",
    "scripts",
    "build",
    "showcase",
    "./helper.js"
  ]
}
