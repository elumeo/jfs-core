{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./scripts"
  },
  "path": {
    "Setup/*": [
      "./scripts/Setup/*"
    ],
    "Library/*": [
      "./scripts/Library/*"
    ]
  },
  "include": [
    "./scripts/**/*"
  ]
}
